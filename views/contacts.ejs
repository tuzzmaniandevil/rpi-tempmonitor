<%- include('header'); -%>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Contacts</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <button class="btn btn-success" type="button" data-toggle="modal" data-target="#addContactModal"><i class="fa fa-plus"></i>
                Add Contact</button>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Table -->
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Mobile</th>
                        <th>Landline</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% if(contacts.length > 0) { %>
                    <% contacts.forEach(function(contact){ %>
                    <tr data-contactid="<%- contact.id %>">
                        <td>
                            <%- contact.firstName %>
                        </td>
                        <td>
                            <%- contact.lastName %>
                        </td>
                        <td>
                            <%- contact.mobile %>
                        </td>
                        <td>
                            <%- contact.landline %>
                        </td>
                        <td>
                            <a href="<%- current_url + '/' + contact.id %>" class="btn btn-sm btn-info" title="Edit Contact"><i
                                    class="fa fa-pencil"></i></a>
                            <button type="button" class="btn btn-sm btn-warning btn-del-contact" title="Delete Contact"><i
                                    class="fa fa-trash"></i></button>
                        </td>
                    </tr>
                    <% }); %>
                    <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center">No Contacts</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="addContactModal" tabindex="-1" role="dialog" aria-labelledby="addContactModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form role="form" action="/contacts/add" method="post" class="form-horizontal">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="addContactModalLabel">Add Contact</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger err-msg" role="alert" style="display: none;"></div>
                    <div class="form-group">
                        <label for="add_firstName" class="col-sm-3 control-label">First Name</label>
                        <div class="col-sm-9">
                            <input type="text" name="firstName" class="form-control" id="add_firstName" placeholder="Firstname"
                                required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="add_lastName" class="col-sm-3 control-label">Last Name</label>
                        <div class="col-sm-9">
                            <input type="text" name="lastName" class="form-control" id="add_lastName" placeholder="Last Name" />
                        </div>
                    </div>

                    <!-- <div class="form-group">
                        <label for="add_email" class="col-sm-3 control-label">Email</label>
                        <div class="col-sm-9">
                            <input type="email" name="email" class="form-control" id="add_email" placeholder="Email address" />
                        </div>
                    </div> -->

                    <div class="form-group">
                        <label for="add_mobile" class="col-sm-3 control-label">Mobile</label>
                        <div class="col-sm-9">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <select name="mobile-region" class="btn btn-default">
                                        <% supportedCountries.forEach(function(cc){ %>
                                        <option value="<%- cc.regionCode %>">
                                            <%= cc.regionCode %> (+<%- cc.countryCode %>)
                                        </option>
                                        <% }); %>
                                    </select>
                                </span>
                                <input type="tel" name="mobile" class="form-control" id="add_mobile" placeholder="Mobile" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="add_landline" class="col-sm-3 control-label">Landline</label>
                        <div class="col-sm-9">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <select name="mobile-region" class="btn btn-default">
                                        <% supportedCountries.forEach(function(cc){ %>
                                        <option value="<%- cc.regionCode %>">
                                            <%= cc.regionCode %> (+<%- cc.countryCode %>)
                                        </option>
                                        <% }); %>
                                    </select>
                                </span>
                                <input type="tel" name="landline" class="form-control" id="add_landline" placeholder="Landline" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<% extraJs.push('/js/contacts.js') %>

<%- include('footer'); -%>